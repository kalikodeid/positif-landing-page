---
import Layout from "../layouts/Layout.astro";
import "../styles/global.css";
import Navbar from "../components/Navbar.astro";
import Hero from "../components/Hero.astro";
import Partner from "../components/Partner.astro";
import Features from "../components/Features.astro";
import Benefits from "../components/Benefits.astro";
import Testimonials from "../components/Testimonials.astro";
import Pricing from "../components/Pricing.astro";
import FAQ from "../components/FAQ.astro";
import CTA from "../components/CTA.astro";
import Footer from "../components/Footer.astro";
---

<Layout>
  <Navbar />
  <Hero />
  <Partner />

  <Features>
    <!-- The original page used multiple feature sections; we keep the structure inline here to preserve layout.
					 For more granular control you can split each feature into its own component later. -->
    <section class="py-20 bg-gradient-to-br from-primary-50 to-white">
      <div class="container mx-auto px-6">
        <div class="grid md:grid-cols-2 gap-12 items-center">
          <div class="bg-white rounded-2xl shadow-xl p-8">
            <div class="space-y-4">
              <div class="bg-primary-100 rounded-lg p-4">
                <div class="text-sm text-gray-600">Dashboard Overview</div>
              </div>
            </div>
          </div>
          <div>
            <h2 class="text-4xl font-bold mb-6">
              Fitur Unggulan Untuk Mempermudah Operasional Bisnis Anda
            </h2>
            <p class="text-gray-600 mb-6">
              Sistem POS yang dilengkapi dengan berbagai fitur canggih untuk
              membantu mengelola bisnis Anda lebih efisien
            </p>
            <ul class="space-y-3">
              <li class="flex items-start">
                <svg
                  class="w-6 h-6 text-primary-500 mr-2 mt-1"
                  fill="currentColor"
                  viewBox="0 0 20 20"
                  ><path
                    fill-rule="evenodd"
                    d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z"
                    clip-rule="evenodd"></path></svg
                ><span class="text-gray-700"
                  >Dashboard lengkap dengan analitik real-time</span>
              </li>
              <li class="flex items-start">
                <svg
                  class="w-6 h-6 text-primary-500 mr-2 mt-1"
                  fill="currentColor"
                  viewBox="0 0 20 20"
                  ><path
                    fill-rule="evenodd"
                    d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z"
                    clip-rule="evenodd"></path></svg
                ><span class="text-gray-700"
                  >Kelola transaksi dengan cepat dan mudah</span>
              </li>
            </ul>
          </div>
        </div>
      </div>
    </section>

    <section class="py-20 bg-white">
      <div class="container mx-auto px-6">
        <div class="grid md:grid-cols-2 gap-12 items-center">
          <div class="order-2 md:order-1">
            <h2 class="text-4xl font-bold mb-6">
              Manajemen Produk & Penjualan
            </h2>
            <p class="text-gray-600 mb-6">
              Kelola inventori, harga, dan kategori produk dengan mudah. Pantau
              performa penjualan secara real-time
            </p>
            <button class="text-primary-500 font-semibold hover:text-primary-600"
              >Pelajari Lebih Lanjut →</button
            >
          </div>
          <div
            class="order-1 md:order-2 bg-primary-50 rounded-2xl shadow-xl p-8"
          >
            <div class="bg-white rounded-lg p-6">
              <div class="space-y-4">
                <div class="text-sm text-gray-600">Product Management</div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>

    <section class="py-20 bg-gradient-to-br from-primary-50 to-white">
      <div class="container mx-auto px-6">
        <div class="grid md:grid-cols-2 gap-12 items-center">
          <div class="bg-white rounded-2xl shadow-xl p-8">
            <div class="space-y-4">
              <div class="bg-primary-100 rounded-lg p-4">
                <div class="text-sm text-gray-600">Inventory & Purchases</div>
              </div>
            </div>
          </div>
          <div>
            <h2 class="text-4xl font-bold mb-6">Inventori & Pembelian</h2>
            <p class="text-gray-600 mb-6">
              Pantau stok barang secara real-time, kelola supplier, dan otomasi
              pemesanan ulang
            </p>
            <button class="text-primary-500 font-semibold hover:text-primary-600"
              >Pelajari Lebih Lanjut →</button
            >
          </div>
        </div>
      </div>
    </section>

    <section class="py-20 bg-white">
      <div class="container mx-auto px-6">
        <div class="grid md:grid-cols-2 gap-12 items-center">
          <div class="order-2 md:order-1">
            <h2 class="text-4xl font-bold mb-6">
              Aplikasi Kasir Mobile & Website
            </h2>
            <p class="text-gray-600 mb-6">
              Akses sistem POS Anda dari mana saja melalui aplikasi mobile dan
              web dashboard
            </p>
            <button class="text-primary-500 font-semibold hover:text-primary-600"
              >Pelajari Lebih Lanjut →</button
            >
          </div>
          <div
            class="order-1 md:order-2 bg-primary-50 rounded-2xl shadow-xl p-8"
          >
            <div class="flex gap-4">
              <div class="bg-white rounded-lg p-4 flex-1">
                <div class="text-sm text-gray-600">Mobile App</div>
              </div><div class="bg-primary-500 rounded-lg p-4 flex-1">
                <div class="text-sm text-white">Web Dashboard</div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>

    <section class="py-20 bg-gradient-to-br from-primary-50 to-white">
      <div class="container mx-auto px-6">
        <div class="grid md:grid-cols-2 gap-12 items-center">
          <div class="bg-white rounded-2xl shadow-xl p-8">
            <div class="text-sm text-gray-600">Multi-Outlet Support</div>
          </div>
          <div>
            <h2 class="text-4xl font-bold mb-6">Multi-Outlet Support</h2>
            <p class="text-gray-600 mb-6">
              Kelola beberapa outlet atau cabang bisnis Anda dari satu dashboard
              terpusat
            </p>
            <button class="text-primary-500 font-semibold hover:text-primary-600"
              >Pelajari Lebih Lanjut →</button
            >
          </div>
        </div>
      </div>
    </section>

    <section class="py-20 bg-white">
      <div class="container mx-auto px-6">
        <div class="grid md:grid-cols-2 gap-12 items-center">
          <div class="order-2 md:order-1">
            <h2 class="text-4xl font-bold mb-6">
              Laporan Penjualan & Perpajakan
            </h2>
            <p class="text-gray-600 mb-6">
              Dapatkan insight mendalam tentang performa bisnis Anda dengan
              laporan yang komprehensif
            </p>
            <button class="text-primary-500 font-semibold hover:text-primary-600"
              >Pelajari Lebih Lanjut →</button
            >
          </div>
          <div
            class="order-1 md:order-2 bg-primary-50 rounded-2xl shadow-xl p-8"
          >
            <div class="text-sm text-gray-600">Sales Reports & Tax</div>
          </div>
        </div>
      </div>
    </section>
  </Features>

  <Benefits />

  <Testimonials />

  <Pricing />

  <FAQ />

  <CTA />

  <Footer />
</Layout>

<style>
  html {
    scroll-behavior: smooth;
  }
</style>
