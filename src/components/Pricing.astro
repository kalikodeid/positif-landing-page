<section id="harga" class="py-20 bg-linear-to-br from-primary-50 to-white">
  <div class="container mx-auto px-6">
    <h2 class="text-4xl font-bold text-center mb-4">Pilih Paket Sesuai Dengan Kebutuhan</h2>
    <p class="text-center text-gray-600 mb-4">Dapatkan harga terbaik untuk bisnis Anda</p>
    <div class="flex justify-center mb-12">
      <div class="bg-primary-100 rounded-full p-1 inline-flex">
        <button class="px-6 py-2 rounded-full bg-primary-500 text-white">Bulanan</button>
        <button class="px-6 py-2 rounded-full text-gray-600">Tahunan <span class="text-xs bg-primary-500 text-white px-2 py-1 rounded-full ml-1">Hemat 20%</span></button>
      </div>
    </div>

    <div class="grid md:grid-cols-3 gap-8 max-w-6xl mx-auto">
      <!-- Starter Plan -->
      <div class="bg-white rounded-2xl p-8 shadow-lg border-2 border-gray-100">
        <div class="text-sm text-primary-500 font-semibold mb-2">STARTER</div>
        <div class="mb-6">
          <span class="text-sm text-gray-600">Mulai dari</span>
          <div class="flex items-baseline">
            <span class="text-sm">Rp</span>
            <span class="text-4xl font-bold">50.000</span>
            <span class="text-gray-600">,- /bulan</span>
          </div>
        </div>
        <button class="w-full bg-primary-500 text-white py-3 rounded-full font-semibold hover:bg-primary-600 mb-6">Mulai Sekarang</button>
