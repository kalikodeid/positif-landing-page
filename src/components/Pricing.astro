        </ul>
      </div>

      <!-- Enterprise Plan -->
      <div class="bg-white rounded-2xl p-8 shadow-lg border-2 border-gray-100">
        <div class="text-sm text-primary-500 font-semibold mb-2">ENTERPRISE</div>
        <div class="mb-6">
          <span class="text-sm text-gray-600">Mulai dari</span>
          <div class="flex items-baseline">
            <span class="text-sm">Rp</span>
            <span class="text-4xl font-bold">10.000</span>
